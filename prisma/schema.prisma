generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Config {
  name  String @id
  value Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id String @id @default(uuid())

  name    String  @unique
  content String
  userId  String?

  links QuestionLink[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuestionLink {
  id String @id @default(uuid())

  name String
  url  String

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Link {
  id String @id @default(uuid())

  name        String  @unique
  description String?
  url         String  @unique
  userId      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Anto {
  id String @id @default(uuid())

  quote  String  @unique
  userId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rule {
  id String @id @default(uuid())

  rule   String  @unique
  userId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InfoMessage {
  id String @id @default(uuid())

  index   Int             @unique
  type    InfoMessageType
  content String
  userId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum InfoMessageType {
  TEXT
  IMAGE
}

model Experience {
  id String @id @default(uuid())

  userId      String    @unique
  experience  BigInt    @default(0)
  level       Int       @default(0)
  messages    Int       @default(0)
  lastMessage DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reminder {
  id String @id @default(uuid())

  userId         String
  channelId      String?
  privateMessage Boolean  @default(false)
  description    String   @default("Reminder")
  timestamp      DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Poll {
  id String @id @default(uuid())

  userId      String
  channelId   String
  title       String
  description String
  anonymous   Boolean  @default(true)
  multiple    Boolean  @default(false)
  open        Boolean  @default(false)
  done        Boolean  @default(false)
  decision    String?
  threshold   Float    @default(0.5)
  roles       String[] @default([])

  options PollOption[]
  votes   PollVote[]
  vipPoll VipPoll?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PollOption {
  id String @id @default(uuid())

  name       String
  votesCount Int    @default(0)

  pollId String
  poll   Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  votes  PollVote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PollVote {
  id String @id @default(uuid())

  userId String

  optionId String
  option   PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  pollId   String
  poll     Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VipPoll {
  id String @id @default(uuid())

  userId String
  type   String @default("add")

  pollId String @unique
  poll   Poll   @relation(fields: [pollId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, type])
}
